generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./database.db"
}

model Team {
    stdName        String          @id @unique
    displayName    String
    categoryId     String
    category       DiscordCategory @relation(fields: [categoryId], references: [categoryId])
    textChannelId  String
    voiceChannelId String
    members        User[]
    invites        Invite[]
}

model User {
    discordId String @id @unique

    firstName String
    lastName  String
    email     String @unique

    teamStdName String?
    team        Team?   @relation(fields: [teamStdName], references: [stdName])

    verified   Boolean   @default(false)
    verifiedAt DateTime?

    invites Invite[]
}

model Invite {
    inviteeId String
    invitee   User   @relation(fields: [inviteeId], references: [discordId])

    teamStdName String
    Team        Team   @relation(fields: [teamStdName], references: [stdName])

    @@id([inviteeId, teamStdName])
    @@unique([inviteeId, teamStdName])
}

model DiscordCategory {
    categoryId String @id @unique
    teams      Team[]
}
